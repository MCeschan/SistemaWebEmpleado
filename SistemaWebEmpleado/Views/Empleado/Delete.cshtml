@model SistemaWebEmpleado.Models.Empleado

@{
    ViewData["Title"] = "Eliminar empleado";
}


<h2>@Model.Apellido</h2>
<p>¿Desea eliminar este empleado?</p>

@using (Html.BeginForm("Delete", "Empleado", FormMethod.Post))
{

        <div>
            <span>@Html.DisplayNameFor(model => model.Nombre)</span>
            <span>@Html.DisplayFor(model => model.Nombre)</span>
        </div>

        <div>
            <span>@Html.DisplayNameFor(model => model.Apellido)</span>
            <span>@Html.DisplayFor(model => model.Apellido)</span>
        </div>

        <div>
            <span>@Html.DisplayNameFor(model => model.DNI)</span>
            <span>@Html.DisplayFor(model => model.DNI)</span>
        </div>
        <div>
            <span>@Html.DisplayNameFor(model=>model.Legajo)</span>
            <span>@Html.DisplayFor(model=>model.Legajo)</span>
        </div>
        <div>
            <span>@Html.DisplayNameFor(model=>model.FechaNacimiento)</span>
            <span>@Html.DisplayFor(model=>model.FechaNacimiento)</span>
        </div>
        <div>
            <span>@Html.DisplayNameFor(model=>model.Titulo)</span>
            <span>@Html.DisplayFor(model=>model.Titulo)</span>
