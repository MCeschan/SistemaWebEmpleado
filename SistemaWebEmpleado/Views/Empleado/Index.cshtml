@model IEnumerable<SistemaWebEmpleado.Models.Empleado>
<!--VA A RECIBIR UNA COLECCIÓN DE EMPLEADOS-->
@{
    ViewData["Title"] = "Index Empleado";
}
@section SideBar{
    <p>Administración de empleados</p>
}

@Html.ActionLink("Nuevo", "Create", "Empleado")
<table>
    <tr>
        <th>@Html.DisplayNameFor(model=>model.Id)</th>
        <th>@Html.DisplayNameFor(model=>model.Nombre)</th>
        <th>@Html.DisplayNameFor(model=>model.Apellido)</th>
        <th>@Html.DisplayNameFor(model=>model.DNI)</th>
        <th>@Html.DisplayNameFor(model=>model.Legajo)</th>
        <th>@Html.DisplayNameFor(model=>model.FechaNacimiento)</th>
        <th>@Html.DisplayNameFor(model=>model.Titulo)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=>item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Legajo)
            </td>
             <td>
                @Html.DisplayFor(modelItem=>item.FechaNacimiento)
            </td>
             <td>
                @Html.DisplayFor(modelItem=>item.Titulo)
            </td>
            <td>
                <!--esto es lo que recibe la action. id esta tal cual en la action-->
            @Html.ActionLink("Titulo", "GetTitulo", "Empleado", new{titulo=item.Titulo})
             
            </td>
                <td>
                @Html.ActionLink("Editar", "Edit", "Empleado",new{id=item.Id})
                @Html.ActionLink("Detalle", "Details", "Empleado",new{id=item.Id})
                @Html.ActionLink("Eliminar", "Delete", "Empleado",new{id=item.Id})
                </td>

        </tr>
    }
</table>